# =============================================================================
# Whop AI Bot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Database Configuration (Required)
# Get these from your Supabase project settings or your PostgreSQL provider
DATABASE_URL="postgresql://username:password@host:port/database?pgbouncer=true"
DIRECT_URL="postgresql://username:password@host:port/database"

# AI Service Configuration (Required)
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY="your_openrouter_api_key_here"
OPENROUTER_MODEL="google/gemini-2.0-flash-001"

# Whop Integration (Required)
# Get these from your Whop App dashboard
WHOP_APP_API_KEY="your_whop_app_api_key_here"
WHOP_AGENT_USER_ID="your_bot_user_id_here"
WHOP_APP_ID="your_whop_app_id_here"

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Environment
NODE_ENV="production"
PORT="3000"

# Rate Limiting
AI_RATE_LIMIT_PER_MINUTE="10"
MESSAGE_RATE_LIMIT_PER_MINUTE="30"

# Caching
CACHE_TTL_MINUTES="5"
MAX_MEMORY_CACHE_SIZE="1000"

# Security
MAX_MESSAGE_LENGTH="2000"
MAX_KNOWLEDGE_BASE_SIZE="1000000"

# Logging
ENABLE_DB_LOGGING="false" 